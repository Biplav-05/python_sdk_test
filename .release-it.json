{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "assets": "dist/*"
  },
  "hooks": {
    "before:bump": "python -c \"import re; with open('setup.py', 'r+') as f: content = f.read(); f.seek(0); f.write(re.sub(r'version=\\\"[0-9]+\\.[0-9]+\\.[0-9]+\\\"', 'version=\\\"${version}\\\"', content)); f.truncate()\"",
    "before:init": [
      "pip install wheel twine"
    ],
    "after:bump": [
      "python setup.py sdist bdist_wheel"
    ],
    "after:release": [
      "twine upload dist/*"
    ]
  },
  "git": {
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "push": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  }
}